    <div class="container-fluid text-center carrera-header" ng-style="{'background-image':'url('+universidad.img+')'}">
        <h2 class="vcenter">{{universidad.nombre}}</h2>
    </div>
    <!-- TODO convertir nombres en links al detalle -->
    <section class="section container-fluid">
